{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "jsx": "preserve",
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["*"],
      "modules/*": ["./src/modules/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
